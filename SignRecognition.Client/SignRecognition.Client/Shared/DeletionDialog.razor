@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText>Ar tikrai norite ištrinti šiuos duomenis?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" OnClick="Cancel">Atšaukti</MudButton>
        <MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="Submit">Ištrinti</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}